    "_comment": ["- Currently builds with no warnings other than an incorrect warning() function",
                 "  tracked at https://github.com/harfbuzz/harfbuzz/issues/3378",
                 "  Absolutely impossible to fix on Windows."],
    "fatal_warnings": false,
    "build_options": [
      "glib:tests=false",
      "cairo:tests=disabled",
      "pixman:tests=disabled"
    ],
    "brew_packages": [
      "glib-utils"
    ],
    "debian_packages": [
      "libicu-dev",
      "libfreetype6-dev"
    ]
  },
